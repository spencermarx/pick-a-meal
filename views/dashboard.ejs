<%include partials/header%>

    <main class="ui container">


        <h1 id="page-title" class="ui center huge header">This Week's Meals</h1>
        <div id="calendar" class="ui seven column stackable grid">
            <% days.forEach(function(day){ %>
                <div class="column day">
                    <table id="<%= day.day %>" class="ui inverted bg-custom-blue table center aligned">
                        <thead class="">
                            <tr>
                                <th>
                                    <span class="date gray">
                                <%= day.order %></span><br>
                                    <%= day.day%>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="meal-cell lunch">
                                    <h3>
                                        <%=day.meals.lunch.name%>
                                    </h3>
                                    <a class="ui inverted button" href="/recipes/<%=day.meals.lunch._id%>">View</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="meal-cell dinner">
                                    <h3>
                                        <%=day.meals.dinner.name%>
                                    </h3>
                                    <a class="ui inverted button" href="/recipes/day.meals.dinner._id%>">View</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <% });%>
        </div>
        <div class="actions">
            <form action="/dashboard" method="POST">
                <button id="button-delete" class="ui blue basic button margin-top action-button">Randomize</button>
            </form>
        </div>
    </main>
    <%include partials/footer%>