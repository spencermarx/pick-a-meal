<%include partials/header%>
        <div class="ui middle aligned center aligned grid">
            <div class="six wide column">
                <h2 class="ui image header">
                    <div class="content text-custom-dark-blue">
                        Log-in to your account
                    </div>
                </h2>
                <form action="/login" class="ui large form" method="POST" id="login">
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input class="login-form-input" type="text" name="username" placeholder="Username">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input class="login-form-input" type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <button class="ui fluid large btn-custom-dark-blue submit button">Login</button>
                    </div>
                </form>
                <div class="ui message">
                    New to us? <a href="/register">Sign Up</a>
                </div>
            </div>
        </div>
    <%include partials/footer%>